@{
    ViewData["Title"] = "Employee Dashboard";
}

<h2>Welcome, Bank Employee!</h2>

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-dark ">Employee Actions</h3>
        <ul class="list-group list-group-flush">
            <div class="panel panel-primary" bis_skin_checked="1">
                <div class="panel-body" bis_skin_checked="1">
                      <li class="list-group-item"><a asp-action="CreateCustomer" class="btn btn-primary">Create Customer</a></li>
                </div>
            </div>

            <div class="panel panel-info" bis_skin_checked="1">
                <div class="panel-body" bis_skin_checked="1">
                     <li class="list-group-item"><a asp-action="ListCustomers" class="btn btn-info">List Customers</a></li>
                </div>
            </div>

            <div class="panel panel-success" bis_skin_checked="1">
               <div class="panel-body" bis_skin_checked="1">
                     <li class="list-group-item"><a asp-action="CreateTransaction" class="btn btn-success">Create Transaction</a></li>
                </div>
            </div>
            <div class="panel panel-danger" bis_skin_checked="1">
                <div class="panel-body" bis_skin_checked="1">
        <li class="list-group-item"><a asp-action="DeleteCustomer" class="btn btn-danger">Delete Customer</a></li>
                </div>
            </div>
        </ul>
    </div>
</div>